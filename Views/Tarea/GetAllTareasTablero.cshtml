@using tl2_tp10_2023_0ignacio.ViewModels
@model GetListsTareasViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div>
        @if(Model.TareasPropias.Count <= 0){
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <h2>Tablero ajeno</h2>
            </div>
        }else{
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <h2>Tareas propias en este tablero</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
            
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Color</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tarea in Model.TareasPropias)
                        {
                            <tr>
                                <td>@tarea.Nombre</td>
                                <td>@tarea.Desc</td>
                                <td>@tarea.Estado</td>
                                <td><input type="color" value="@tarea.Color" disabled /></td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Opciones">
                                        <a asp-controller="Tarea" class="btn btn-info" asp-action="UpdateTarea" asp-route-id="@tarea.Id" asp-route-esPropietario="true">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div>
            @if(Model.TareasAsignadas.Count <= 0){
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>No tienes tareas asignadas en este tablero</h2>
                </div>
                
            }else{
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>Tareas asignadas en este tablero</h2>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Color</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tarea in Model.TareasAsignadas)
                            {
                                <tr>
                                    <td>@tarea.Nombre</td>
                                    <td>@tarea.Desc</td>
                                    <td>@tarea.Estado</td>
                                    <td><input type="color" value="@tarea.Color" disabled /></td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Opciones">
                                            <a asp-controller="Tarea" asp-action="UpdateEstadoTarea" class="btn btn-info" asp-route-id="@tarea.Id">Editar estado</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div>
            @if(Model.TareasNoAsignadas.Count <= 0){
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>No existen tareas que no esten asignadas</h2>
                </div>
                
            }else{
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>Tareas no asignadas en este tablero</h2>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Color</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tarea in Model.TareasNoAsignadas)
                            {
                                <tr>
                                    <td>@tarea.Nombre</td>
                                    <td>@tarea.Desc</td>
                                    <td>@tarea.Estado</td>
                                    <td><input type="color" value="@tarea.Color" disabled /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>