@using tl2_tp10_2023_0ignacio.ViewModels
@model GetAllTareasViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div>
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <a asp-controller="Tarea" class="btn btn-success" asp-action="NewTarea">Crear tarea</a>
            </div>

            @if(Model.TareasVM.Count <= 0){
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>No tienes tareas asignadas</h2>
                </div>
            }else{
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>Tareas asignadas</h2>
                    
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripci√≥n</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Color</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tarea in Model.TareasVM)
                            {
                                <tr>
                                    <td>@tarea.Nombre</td>
                                    <td>@tarea.Desc</td>
                                    <td>@tarea.Estado</td>
                                    <td><input type="color" value="@tarea.Color" disabled /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            }
        </div>
    </div>
</div>