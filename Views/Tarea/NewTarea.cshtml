@using tl2_tp10_2023_0ignacio.ViewModels
@model NewTareaViewModel

<form asp-controller="Tarea" asp-action="NewTarea" method="post">
    <div>
        <label asp-for="@Model.Tarea.Nombre">Nombre:</label>
        <input asp-for="@Model.Tarea.Nombre" />
    </div>
    <div>
        <label asp-for="@Model.Tarea.Desc">Descripción:</label>
        <textarea asp-for="@Model.Tarea.Desc"></textarea>
    </div>
    <div>
        <label asp-for="@Model.Tarea.Estado">Estado:</label>
        <select asp-for="@Model.Tarea.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()">
            <option value="">Seleccione un estado</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Tarea.Color">Color:</label>
        <input asp-for="@Model.Tarea.Color" type="color" />
    </div>
    <div>
        <label asp-for="@Model.Tarea.IdTablero">Tablero:</label>
        <select asp-for="@Model.Tarea.IdTablero" asp-items="@(new SelectList(Model.TablerosPropios, "Id", "Nombre"))">
            <option value="">Seleccione un tablero</option>
        </select>
    </div>
    <div>
        <label asp-for="@Model.Tarea.IdUsuarioAsignado">Asignar usuario:</label>
        <select asp-for="@Model.Tarea.IdUsuarioAsignado" asp-items="@(new SelectList(Model.Usuarios, "Id", "NombreDeUsuario"))">
            <option value="">Seleccione un usuario</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success"
        onclick="return confirm('¿Estás seguro de crear la tarea?')">Agregar</button>

</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }