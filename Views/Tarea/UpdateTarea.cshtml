@using tl2_tp10_2023_0ignacio.ViewModels
@model UpdateTareaViewModel


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Modificar Tarea</h2>
            <form asp-controller="Tarea" asp-action="ConfirmUpdateTarea" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.IdTablero" />
                <div class="mb-3 row">
                    <div>
                        <label asp-for="@Model.Nombre" class="col-sm-2 col-form-label">Nombre:</label>
                        <input asp-for="@Model.Nombre" class="form-control" />
                        <span asp-validation-for="@Model.Nombre"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div>
                        <label asp-for="@Model.Desc" class="col-sm-2 col-form-label">Descripción</label>
                        <textarea asp-for="@Model.Desc" class="col-sm-2 col-form-label"></textarea>
                        <span asp-validation-for="@Model.Desc"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div>
                        <label asp-for="@Model.Estado" class="input-group-text">Estado:</label>
                        <select asp-for="@Model.Estado" class="form-select" asp-items="@Html.GetEnumSelectList<EstadoTarea>()">
                            <option value="">Seleccione un estado</option>
                        </select>
                        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div>
                        <label asp-for="@Model.Color" class="input-group-text">Color:</label>
                        <input asp-for="@Model.Color" type="color" class="form-control" />
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div>
                        <label asp-for="@Model.IdUsuarioAsignado" class="input-group-text">Asignar usuario:</label>
                        <select asp-for="@Model.IdUsuarioAsignado" class="form-select" asp-items="@(new SelectList(Model.Usuarios, "Id", "NombreDeUsuario"))">
                            <option value="">Seleccione un usuario</option>
                        </select>
                        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success"
                        onclick="return confirm('¿Estás seguro de modificar la tarea?')">Guardar cambios</button>
                </div>
            </form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }