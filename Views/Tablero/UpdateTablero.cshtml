@using tl2_tp10_2023_0ignacio.ViewModels
@model UpdateTableroViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Modificar Tablero</h2>
            <form asp-controller="Tablero" asp-action="ConfirmUpdateTablero" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="mb-3 row">
                    <div>
                        <label asp-for="@Model.Nombre" class="col-sm-2 col-form-label">Nombre:</label>
                        <input asp-for="@Model.Nombre" class="form-control"/>
                        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <div>
                        <label asp-for="@Model.Desc" class="col-sm-2 col-form-label">Descripción:</label>
                        <textarea asp-for="@Model.Desc" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Desc" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <label asp-for="@Model.IdUsuarioPropietario" class="input-group-text">Usuario propietario:</label>
                    <select asp-for="@Model.IdUsuarioPropietario" class="form-select" asp-items="@(new SelectList(Model.Usuarios, "Id", "NombreDeUsuario"))">
                        <option value="">Seleccione un usuario</option>
                    </select>
                    <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success"
                        onclick="return confirm('¿Estás seguro de crear el tablero?')">Confirmar</button>
                </div>
            </form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }