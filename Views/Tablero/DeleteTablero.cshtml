@model Tablero


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Confirmar eliminación del tablero</h2>
            <div>
                <p>¿Estás seguro de que deseas eliminar el tablero "@Model.Nombre"? Si eliminas este Tablero se eliminaran todas sus tareas.</p>
            </div>

            <form asp-controller="Tablero" asp-action="ConfirmDeleteTablero" method="post">
                <input asp-for="@Model.Id" type="hidden" />
                <div class="col-12">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Tablero" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>