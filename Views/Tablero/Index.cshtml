@model List<Tablero>

<div>
    <a asp-controller="Tablero" asp-action="NewTablero">Agregar Tableros</a>
</div>
<h1>Lista de Tableros</h1>

<table>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">IdUsuarioPropietario</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <td>@tablero.Id</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Desc</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>
                    <a asp-controller="Tablero" asp-action="UpdateTablero" asp-route-id="@tablero.Id">Editar</a>
                    <a asp-controller="Tablero" asp-action="DeleteTablero" asp-route-id="@tablero.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>