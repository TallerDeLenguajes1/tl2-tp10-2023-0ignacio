@using tl2_tp10_2023_0ignacio.ViewModels
@model GetAllTablerosAdminViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div>
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <a asp-controller="Tablero" class="btn btn-success" asp-action="NewTablero">Agregar Tableros</a>
            </div>
        </div>
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <h2>Lista de Tableros</h2>
        </div>

            @if(Model.Tableros.Count <= 0){
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h2>No existen tableros</h2>
                </div>
                
            }else{
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripci√≥n</th>
                                <th scope="col">Id Usuario Propietario</th>
                                <th scope="col">Nombre Usuario Propietario</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tablero in Model.Tableros)
                            {
                                <tr>
                                    <td>@tablero.IdTablero</td>
                                    <td>@tablero.NombreTablero</td>
                                    <td>@tablero.DescTablero</td>
                                    <td>@tablero.IdUsuarioPropietario</td>
                                    <td>@tablero.NombreDeUsuarioPropietario</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                            <a asp-controller="Tablero" class="btn btn-warning" asp-action="UpdateTablero" asp-route-id="@tablero.IdTablero">Editar</a>
                                            <a asp-controller="Tablero" class="btn btn-danger" asp-action="DeleteTablero" asp-route-id="@tablero.IdTablero">Eliminar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            </div>
        }
        </div>
    </div>
</div>