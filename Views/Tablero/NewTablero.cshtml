@using tl2_tp10_2023_0ignacio.ViewModels
@model NewTableroViewModel

<form asp-controller="Tablero" asp-action="NewTablero" method="post">
    <div>
        <label asp-for="@Model.Nombre">Nombre:</label>
        <input asp-for="@Model.Nombre" />
    </div>
    <div>
        <label asp-for="@Model.Desc">Descripción:</label>
        <textarea asp-for="@Model.Desc"></textarea>
    </div>
    <div>
        <label asp-for="@Model.IdUsuarioPropietario">Usuario propietario:</label>
        <select asp-for="@Model.IdUsuarioPropietario" asp-items="@(new SelectList(Model.Usuarios, "Id", "NombreDeUsuario"))">
            <option value="">Seleccione un usuario</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success"
        onclick="return confirm('¿Estás seguro de crear el tablero?')">Agregar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }