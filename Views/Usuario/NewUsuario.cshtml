@using tl2_tp10_2023_0ignacio.ViewModels
@model NewUsuarioViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Crear Usuario</h2>
            <form asp-controller="Usuario" asp-action="NewUsuario">
                <div class="mb-3">
                    <label asp-for="@Model.NombreDeUsuario" class="col-sm-2 col-form-label"></label>
                    <div>
                        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
                        <span asp-validation-for="@Model.NombreDeUsuario"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Pass" class="col-sm-2 col-form-label">Contraseña</label>
                    <div>
                        <input class="form-control" asp-for="@Model.Pass">
                        <span asp-validation-for="@Model.Pass"></span>
                    </div>
                </div>
                    
                <div class="input-group mb-3">
                    <label asp-for="@Model.Rol" class="input-group-text">Rol</label>
                    <div>
                        @* <input class="form-control" asp-for="@Model.Rol"> *@
                        <select asp-for="@Model.Rol" class="form-select" asp-items="@Html.GetEnumSelectList<Roles>()">
                            <option value="">Seleccione un estado</option>
                        </select>
                        <span asp-validation-for="@Model.Rol"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div>
                        <button type="submit" class="btn btn-success"
                            onclick="return confirm('¿Estás seguro de crear el usuario?')">Agregar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }