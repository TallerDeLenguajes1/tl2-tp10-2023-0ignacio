@{
    ViewData["Title"] = "Usuarios";
}
@model List<Usuario>

<h2>Lista de usuarios</h2>
<div>
    <a asp-controller="Usuario" asp-action="NewUsuario">Agregar Usuario</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope = "col">ID</th>
            <th scope = "col">Nombre</th>
            <th scope = "col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <th scope = "row">@usuario.Id</th>
                <td>@usuario.NombreDeUsuario</td>
                <td>
                    <a asp-controller="Usuario" asp-action="UpdateUsuario" asp-route-id="@usuario.Id">Editar</a>
                    <a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-id="@usuario.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>